//Exercise - G - B
/*
# include <stdio.h>
# include <math.h>
int main()
{   int x,y;
    float r,q;
	printf("enter cartesian coordinates x and y of a point to convert into polar coordinates");
	scanf("%d %d",&x,&y);
	r=sqrt((x*x)+(y*y));
	q=atan(y/x);
	printf("polar coordinares are %f %f ",r,q);	

	// 1 1 - 1.414214  0.785398 
}
*/

//Exercise - G - C
/*
# include <stdio.h>
# include <math.h>
int main()
{   float L1,L2,G1,G2,dis,dist,s;
	printf("enter value of latitudes in degrees");
	scanf("%f %f",&L1,&L2);
	printf("enter value of longitudes in degrees");
	scanf("%f %f",&G1,&G2);
    dis=(sin(L1)*sin(L2)+cos(L1)*cos(L2)*cos(G2-G1));
    s=acos(dis);
    dist=s*3963;
	printf("distance in nautical miles %f  ",dist);
	
	//20.3 23.3 54.5 70.21 - 10935.083008	
}
*/

